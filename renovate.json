{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "default:automergeDigest"
  ],
  "automerge": true,
  "automergeSchedule": ["* 22-23,0-4 * * 1-5"],
  "automergeType": "pr",
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile"
      ],
      "automerge": true,
      "major": {
        "enabled": false
      }
    }
  ],
      "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
		    "docker-bake.hcl$"
            ],
            "matchStringsStrategy": "any",
            "matchStrings": [
                "# (?<depName>.*?):(?<currentValue>.*?)@(?<currentDigest>sha256:[a-f0-9]+)\\s"
            ],
            "datasourceTemplate": "docker"
        }
    ]
}

