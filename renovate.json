{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "major": {
    "enabled": false
  },
  "automerge": true,
  "automergeType": "pr",
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile"
      ],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "docker-bake.hcl$"
      ],
      "matchStrings": [
        "#\\s*target:\\s+(?<depName>[^\\s:@]+(?:/[^\\s:@]+)*):(?<currentValue>[^\\s@]+)(?:@sha256:(?<currentDigest>[a-f0-9]{64}))?"
      ],
      "depNameTemplate": "public.ecr.aws/lts/ubuntu",
      "datasourceTemplate": "docker"
    }
  ]
}

