{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile"
      ],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "docker-bake.hcl$"
      ],
      "matchStrings": [
        "#\\s*target:\\s+(\\s|\"|')?(?<currentValue>.+?)(\\s|\"|'|$)"
      ],
      "depNameTemplate": "public.ecr.aws/lts/ubuntu",
      "datasourceTemplate": "docker"
    }
  ]
}
